<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Button android:id="@+id/bRealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphical View"
            android:layout_weight="1"
            android:textSize="30sp"/>


        <Button android:id="@+id/bGaugeTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gauge View"
            android:layout_weight="1"
            android:textSize="30sp"/>
        <!--
        <Button android:id="@+id/bMakeCSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MakeCSV"/>

        <TextView android:id="@+id/tvTestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"/> -->
        <Button android:id="@+id/bLoadCSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load CSV"
            android:layout_weight="1"
            android:textSize="30sp"/>
    </LinearLayout>
    <!--
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="250dip" />
-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graphical_text"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graphical_def"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gauge_text"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gauge_def"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadcsv_text"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadcsv_def"
        android:textSize="25dp"/>
</LinearLayout>
